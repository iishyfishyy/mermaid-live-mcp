{
  "type": "sequence",
  "title": "User Authentication",
  "participants": [
    { "id": "client", "label": "Browser" },
    { "id": "api", "label": "API Gateway" },
    { "id": "auth", "label": "Auth Service" },
    { "id": "db", "label": "PostgreSQL" }
  ],
  "messages": [
    { "from": "client", "to": "api", "label": "POST /login {email, password}" },
